<resources>
    <style name="Theme.Zemga.MainTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/beige</item>

        <item name="colorSecondary">@color/dark_gray</item>
        <item name="colorSecondaryVariant">@color/dark</item>
        <item name="colorOnSecondary">@color/gray</item>

        <item name="android:colorBackground">@color/dark</item>
        <item name="colorOnBackground">@color/light_beige</item>

        <item name="colorError">@color/green</item>
        <item name="colorOnError">@color/blue</item>

        <item name="colorOnSurface">@color/light_beige</item>
        <item name="colorSurface">@color/dark</item>

        <item name="android:statusBarColor">@color/dark</item>
    </style>

    <style name="Theme.Zemga.MainTheme.NavigationBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextAppearanceInactive">@color/primary_variant</item>
        <item name="itemTextAppearanceActive">@color/primary_variant</item>
        <item name="itemIconTint">@color/primary_variant</item>
        <item name="itemTextColor">@color/primary_variant</item>

        <item name="itemRippleColor">@null</item>

        <item name="labelVisibilityMode">unlabeled</item>
    </style>


    <style name="Theme.Zemga.SearchWidget" parent="Theme.Zemga.MainTheme">
        <item name="android:background">@drawable/search_widget_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">4dp</item>
    </style>

</resources>